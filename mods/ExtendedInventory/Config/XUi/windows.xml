<configs>
  <!-- Grid geometry: 6 rows × 10 cols, 56px cells -->
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@rows">6</set>
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cols">10</set>
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cell_width">56</set>
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cell_height">56</set>

  <!-- Replace default item stack element with our compact template -->
  <remove xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/backpack_item_stack"/>
  <append xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']">
    <backpack_item_stack_compact name="0"/>
  </append>

  <!-- Background resized to exactly match 10×56 and 6×56 (like vanilla 9×67 -> 603×336) -->
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/sprite[@name='backgroundMain']/@width">560</set>
  <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/sprite[@name='backgroundMain']/@height">336</set>
</configs>
