<?xml version="1.0" encoding="UTF-8"?>
<config>
  <!-- Make nights darker by reducing ambient lighting values -->
  <!-- Based on original worldglobal.xml values, making night values approximately 2x darker -->
  
  <!-- Reduce ambient equator scale for night (from 0.45 to 0.225) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientEquatorScale']/@value">.7, .225</setattribute>
  
  <!-- Reduce ambient ground scale for night (from 0.05 to 0.025) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientGroundScale']/@value">.3, .025</setattribute>
  
  <!-- Reduce ambient sky scale for night (from 0.7 to 0.35) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientSkyScale']/@value">1, .35</setattribute>
  
  <!-- Reduce sky desaturation for night (from 0.7 to 0.35) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientSkyDesat']/@value">.7, .35</setattribute>
  
  <!-- Reduce moon ambient lighting (from 0.4 to 0.2) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientMoon']/@value">.8, .2</setattribute>
  
  <!-- Reduce indoor ambient equator for night (from 1.5 to 0.75) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientInsideEquatorScale']/@value">.55, .75</setattribute>
  
  <!-- Reduce indoor ground ambient for night (from 0.2 to 0.1) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientInsideGroundScale']/@value">.2, .1</setattribute>
  
  <!-- Reduce indoor sky ambient for night (from 0.4 to 0.2) -->
  <setattribute xpath="/worldglobal/environment/property[@name='ambientInsideSkyScale']/@value">.8, .2</setattribute>
  
  <!-- Increase fog power for night to reduce visibility (from 1 to 2) -->
  <setattribute xpath="/worldglobal/environment/property[@name='fogPower']/@value">1, 2</setattribute>
  
  <!-- Keep fog water unchanged as it's already optimal -->
  <setattribute xpath="/worldglobal/environment/property[@name='fogWater']/@value">.47, .2</setattribute>
  
  <!-- Keep fog water color unchanged -->
  <setattribute xpath="/worldglobal/environment/property[@name='fogWaterColor']/@value">.38, .42, .38</setattribute>
</config>
