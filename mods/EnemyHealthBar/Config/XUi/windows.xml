<EnemyHealthBar>

	<remove xpath="/windows/window[@name='windowTargetBar']" />

	<append xpath="/windows">
		<window name="windowTargetBar" controller="TargetBar" anchor="CenterTop" visibility="always">
			<rect pos="-200,-85" width="400" height="36" visible="{isnotboss}">
				<sprite depth="1" name="background" pos="0,0" width="400" height="36" sprite="menu_empty" type="sliced" color="0,0,0,180" globalopacity="false"/>
				<filledsprite depth="2" name="healthBar" pos="2,2" width="396" height="32" color="255,0,0,200" fill="{fill}" filldirection="horizontal" globalopacity="false"/>
				<label depth="3" name="targetName" pos="200,18" font_size="24" color="[white]" justify="center" pivot="center" text="{name}" height="36"/>
			</rect>
			
			<rect pos="-267,-85" width="534" height="36" visible="{isboss}">
				<sprite depth="1" name="background" pos="0,0" width="534" height="36" sprite="menu_empty" type="sliced" color="0,0,0,180" globalopacity="false"/>
				<filledsprite depth="2" name="healthBar" pos="2,2" width="530" height="32" color="255,165,0,200" fill="{fill}" filldirection="horizontal" globalopacity="false"/>
				<label depth="3" name="targetName" pos="267,18" font_size="28" color="[white]" justify="center" pivot="center" text="{name}" height="36"/>
			</rect>
		</window>
	</append>

</EnemyHealthBar>
